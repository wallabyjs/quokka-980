{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@dataloaders/*": ["../dataloaders/*"],
      "@/*": ["*"],
      "@test/*": ["../test/*"]
    },
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  }
}
